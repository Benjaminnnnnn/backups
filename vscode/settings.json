{
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontSize": 16,
  "editor.codeActionsOnSave": ["source.organizeImports", "source.fixAll"],
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,
  "files.associations": { "*html": "html" },
  // // For ESLint
  // "source.fixAll.eslint": true,
  // // For TSLint
  // "source.fixAll.tslint": true,
  // // For Stylelint
  // "source.fixAll.stylelint": true,
  "editor.suggestSelection": "first",
  "python.jediEnabled": false,
  "python.linting.enabled": false,
  "terminal.integrated.inheritEnv": false,
  "python.defaultInterpreterPath": "/Users/benjaminzhuang/opt/anaconda3/envs/python_3.6/bin/python",
  "python.linting.flake8Path": "/Users/benjaminzhuang/opt/anaconda3/envs/cse163/bin/flake8",
  "python.linting.flake8Enabled": true,
  "[html]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
    // "editor.formatOnSave": false
  },
  "[css]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "editor.rulers": [80, 100],
  "trailing-spaces.trimOnSave": true,
  "editor.renderWhitespace": "all",
  "files.trimTrailingWhitespace": true,
  "workbench.colorTheme": "One Dark Pro",
  "python.languageServer": "Default",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "workbench.iconTheme": "material-icon-theme",
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "[python]": {
    "editor.formatOnType": true
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "markdown-preview-enhanced.previewTheme": "atom-light.css",
  // latex
  "latex-workshop.docker.enabled": true,
  "latex-workshop.latex.outDir": "./out",
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.docker.image.latex": "tianon/latex",
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    ".*Styles.*",
    ".*Link.*",
    ".*ClassName.*"
  ],
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "window.zoomLevel": 1,
}

